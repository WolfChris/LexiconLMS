            <h3><strong>@TempData["Coursename"]</strong>  Moduls</h3>
            <hr id="coursesHR" />
            <div class="list-group">
                @foreach (var item in Model)
                {
                    @Ajax.ActionLink(item.ModulName,
                   "Details", "Moduls",
                   new { id = item.Id },
